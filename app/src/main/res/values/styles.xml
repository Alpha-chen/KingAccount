<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/my_color</item>
        <item name="colorPrimaryDark">@color/dark_my_color</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ImageTranslucentTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!--在Android 4.4之前的版本上运行，直接跟随系统主题-->
    </style>

    <style name="WindowPush" parent="Theme.AppCompat.Light.NoActionBar">
        <!--在Android 4.4之前的版本上运行，直接跟随系统主题-->
        <item name="android:windowAnimationStyle">@style/Animation</item>
    </style>

    <style name="SwitchCompat" parent="ImageTranslucentTheme">
        <!-- colorPrimary is used for the default action bar background -->
        <item name="colorPrimary">@color/my_color</item>
        <!-- colorPrimaryDark is used for the status bar -->
        <item name="colorPrimaryDark">@color/my_color</item>
        <!-- colorAccent is used as the default value for colorControlActivated,
             which is used to tint widgets -->
        <item name="colorAccent">@color/switch_compat</item>
        <!-- You can also set colorControlNormal, colorControlActivated
             colorControlHighlight, and colorSwitchThumbNormal. -->
    </style>


    <style name="Animation" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/activity_push_bottom_in</item>
        <item name="android:activityOpenExitAnimation">@android:anim/fade_out</item>
        <item name="android:activityCloseEnterAnimation">@android:anim/fade_in</item>
        <item name="android:activityCloseExitAnimation">@anim/activity_push_bottom_out</item>
    </style>

    <style name="type_btn">
        <item name="android:layout_width">97dp</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">17sp</item>
    </style>

    <style name="keyboard_rectangle_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/rectangle_keyboard_selector</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="keyboard_line_horizontal">
        <item name="android:layout_width">1px</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/black_50</item>
    </style>

    <style name="keyboard_line_vertical">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:background">@color/black_50</item>
    </style>

    <declare-styleable name="CalendarPicker">
        <attr name="show_modle" format="enum">
            <enum name="select" value="0"/>
            <enum name="calendar" value="1"/>
        </attr>
        <attr name="week_color" format="reference"/>
        <attr name="week_bg" format="reference"/>
        <attr name="week_height" format="dimension"/>
        <attr name="week_tv_textsize" format="integer"/>
    </declare-styleable>


    <style name="dialog_transparent">
        <item name="android:windowBackground">@android:color/transparent</item>　
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>　
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowActionModeOverlay">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowSoftInputMode">stateHidden|adjustResize</item>
    </style>

    <style name="submit_btn_style">
        <item name="android:layout_width">270dp</item>
        <item name="android:layout_height">44dp</item>
        <item name="android:text">@string/submit</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/round_bg_selector</item>
        <item name="android:textSize">16sp</item>
        <item name="android:padding">0dp</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>

    <style name="rectangle_photo_style">
        <item name="android:layout_width">310dp</item>
        <item name="android:layout_height">50dip</item>
        <item name="android:background">@drawable/round_bg_selector</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:textColor">@color/my_color</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="centerHorizontal">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>

    <style name="centerVertical">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
    </style>


    <style name="type_icon">
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="type_name" parent="centerVertical">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/color1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center</item>
        <item name="android:maxEms">6</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_marginLeft">10dp</item>
    </style>

    <style name="type_money" parent="centerVertical">
        <item name="android:textSize">15sp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">right|center_vertical</item>
        <item name="android:maxEms">9</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_marginRight">13dp</item>
    </style>

    <style name="type_note_root">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_marginLeft">10dp</item>
    </style>

    <style name="type_note">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">@color/color3</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center</item>
        <item name="android:maxEms">9</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>


    <style name="home_month_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">13dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="home_money_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>

    <!--tiltle的样式-->
    <style name="title_bg_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:background">@color/my_color</item>
    </style>

    <style name="title_text_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/common_textSize</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="detail_accunt_text_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/common_textSize</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginLeft">15dp</item>
    </style>

    <style name="detail_accunt_text_detail_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/common_textSize</item>
        <item name="android:textColor">@color/black_50</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginLeft">15dp</item>

    </style>
    <!--定位中progress的样式-->
    <style name="my_sns_location_progress">
        <item name="android:indeterminateDrawable">@anim/progress_sns_locations</item>
        <item name="android:minWidth">16dp</item>
        <item name="android:maxWidth">16dp</item>
        <item name="android:minHeight">16dp</item>
        <item name="android:maxHeight">16dp</item>
    </style>
</resources>
