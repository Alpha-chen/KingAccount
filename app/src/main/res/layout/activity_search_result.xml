<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.account.king.view.KingTitleView
        android:id="@+id/search_result_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:leftBackImg="true"/>

    <TextView
        android:id="@+id/search_result_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/search_result_title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="adfasd"
        android:textSize="@dimen/common_textSize"/>

    <LinearLayout
        android:id="@+id/search_result_detail"
        android:layout_width="wrap_content"
        android:visibility="gone"
        android:layout_height="wrap_content"
        android:layout_below="@id/search_result_date"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/search_result_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="asdfaadfa"
            android:textSize="@dimen/common_textSize"/>

        <TextView
            android:id="@+id/account_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="asdfaadfa"
            android:textSize="@dimen/common_textSize"
            />
        <TextView
            android:id="@+id/search_result_total_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="asdfaadfa"
            android:textSize="@dimen/common_textSize"
            />
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/account_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/search_result_detail"
        android:layout_marginTop="10dp"
        />
</RelativeLayout>