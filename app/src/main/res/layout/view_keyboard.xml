<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:clickable="true">

    <LinearLayout
        android:id="@+id/key_height"
        android:layout_width="match_parent"
        android:layout_height="228dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/keyboard_num_1"
                style="@style/keyboard_rectangle_style"
                android:text="1" />

            <View style="@style/keyboard_line_horizontal" />

            <Button
                android:id="@+id/keyboard_num_2"
                style="@style/keyboard_rectangle_style"
                android:text="2" />

            <View style="@style/keyboard_line_horizontal" />

            <Button
                android:id="@+id/keyboard_num_3"
                style="@style/keyboard_rectangle_style"
                android:text="3" />

            <View style="@style/keyboard_line_horizontal" />

            <RelativeLayout
                android:id="@+id/keyboard_num_add"
                style="@style/keyboard_rectangle_style">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:background="@drawable/keyboard_add" />

            </RelativeLayout>

        </LinearLayout>

        <View style="@style/keyboard_line_vertical" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/keyboard_num_4"
                style="@style/keyboard_rectangle_style"
                android:text="4" />

            <View style="@style/keyboard_line_horizontal" />

            <Button
                android:id="@+id/keyboard_num_5"
                style="@style/keyboard_rectangle_style"
                android:text="5" />

            <View style="@style/keyboard_line_horizontal" />

            <Button
                android:id="@+id/keyboard_num_6"
                style="@style/keyboard_rectangle_style"
                android:text="6" />

            <View style="@style/keyboard_line_horizontal" />

            <RelativeLayout
                android:id="@+id/keyboard_num_sub"
                style="@style/keyboard_rectangle_style">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:background="@drawable/keyboard_sub" />

            </RelativeLayout>

        </LinearLayout>

        <View style="@style/keyboard_line_vertical" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">

                    <Button
                        android:id="@+id/keyboard_num_7"
                        style="@style/keyboard_rectangle_style"
                        android:text="7" />

                    <View style="@style/keyboard_line_horizontal" />

                    <Button
                        android:id="@+id/keyboard_num_8"
                        style="@style/keyboard_rectangle_style"
                        android:text="8" />

                    <View style="@style/keyboard_line_horizontal" />

                    <Button
                        android:id="@+id/keyboard_num_9"
                        style="@style/keyboard_rectangle_style"
                        android:text="9" />

                    <View style="@style/keyboard_line_horizontal" />

                </LinearLayout>

                <View style="@style/keyboard_line_vertical" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">

                    <Button
                        android:id="@+id/keyboard_num_dian"
                        style="@style/keyboard_rectangle_style"
                        android:layout_weight="1"
                        android:text="." />

                    <View style="@style/keyboard_line_horizontal" />

                    <Button
                        android:id="@+id/keyboard_num_0"
                        style="@style/keyboard_rectangle_style"
                        android:layout_weight="1"
                        android:text="0" />

                    <View style="@style/keyboard_line_horizontal" />

                    <RelativeLayout
                        android:id="@+id/keyboard_num_x"
                        style="@style/keyboard_rectangle_style">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:background="@drawable/keyboard_delete" />

                    </RelativeLayout>

                    <View style="@style/keyboard_line_horizontal" />

                </LinearLayout>


            </LinearLayout>

            <Button
                android:id="@+id/keyboard_num_ok"
                style="@style/keyboard_rectangle_style"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="ok"
                android:textSize="20sp"
                android:textColor="@color/color_bg"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>