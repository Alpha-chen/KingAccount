<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_add_account"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/color_bg">

        <RelativeLayout
            android:id="@+id/title_left"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingLeft="15dp"
            android:paddingRight="15dp">

            <ImageView
                android:id="@+id/title_left_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@drawable/add_close"
                android:visibility="visible" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/add_type_income_btn"
                style="@style/type_btn"
                android:layout_marginLeft="10dp"
                android:background="@null"
                android:text="@string/type_income"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/add_type_cost_btn"
                style="@style/type_btn"
                android:background="@drawable/add_top_type_bg"
                android:text="@string/type_cost"
                android:textColor="@color/add_select_type" />

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>